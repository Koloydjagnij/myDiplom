@model test.City

@{
    ViewData["Title"] = "Изменения";
}


<h4>Город</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTown" />
            <div class="form-group">
                <label asp-for="NameCity" class="control-label">Название</label>
                <input asp-for="NameCity" class="form-control" />
                <span asp-validation-for="NameCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArea" class="control-label">Район</label>
                <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea">
                    <option selected="selected" disabled="disabled">---</option>
                </select>
                <span asp-validation-for="IdArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
