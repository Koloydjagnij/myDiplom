                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Отчество</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Enrollees.Family)
                    {
                        <tr>
                            <td>
                                @Html.EditorFor(modelItems => item.IdFamilyTypeNavigation.NameFamilyType)
                            </td>
                            <td>
                                @Html.EditorFor(modelItems => item.IdParentNavigation.IdParentTypeNavigation.NameParentType)
                            </td>
                            <td>
