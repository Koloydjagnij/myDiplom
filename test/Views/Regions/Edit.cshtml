@model test.Region

@{
    ViewData["Title"] = "Изменения";
}

<h4>Область</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRegion" />
            <div class="form-group">
                <label asp-for="NameRegion" class="control-label"></label>
                <input asp-for="NameRegion" class="form-control" />
                <span asp-validation-for="NameRegion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMilitaryDistrict" class="control-label"></label>
                <select asp-for="IdMilitaryDistrict" class="form-control" asp-items="ViewBag.IdMilitaryDistrict">
                    <option selected="selected" disabled="disabled">---</option>
                </select>
                <span asp-validation-for="IdMilitaryDistrict" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
