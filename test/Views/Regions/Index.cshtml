@model IEnumerable<test.Region>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameRegion)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMilitaryDistrictNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMilitaryDistrictNavigation.IdMilitaryDistrict)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRegion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRegion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRegion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
