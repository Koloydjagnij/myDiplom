@model IEnumerable<test.Models.Group>

@{
    ViewData["Title"] = "Список групп";
}


<p>
    <div class="form-group">
        <a asp-action="Create"><input type="submit" value="Создать новую запись" class="btn btn-default" /></a>
    </div>

</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountEnrolleeInGroup)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountEnrolleeInGroup)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGroup">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.IdGroup">Информация</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGroup">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
