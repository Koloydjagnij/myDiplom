@model test.Speciality

@{
    ViewData["Title"] = "Добавленние новой специальности";
}


<h4>Специальность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameSpeciality" class="control-label"></label>
                <input asp-for="NameSpeciality" class="form-control" />
                <span asp-validation-for="NameSpeciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountAbiturToSpeciality" class="control-label"></label>
                <input asp-for="CountAbiturToSpeciality" class="form-control" />
                <span asp-validation-for="CountAbiturToSpeciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<test.Views.Specialities.AssignedSubjectData> subjects = ViewBag.Subject;

                                foreach (var sub in subjects)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedSubject"
                                               value="@sub.SubjectId"
                                               @(Html.Raw(sub.Assigned ? "checked=\"checked\"" : "")) />
                                        @:  @sub.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-default" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
